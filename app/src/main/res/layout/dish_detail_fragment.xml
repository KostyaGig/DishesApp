<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:elevation="@dimen/dish_item_elevation"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="@dimen/dish_item_elevation"
    android:layout_margin="@dimen/dish_detail_offset"
    app:cardCornerRadius="@dimen/dish_detail_corner_radius">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dish_image_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_padding"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/dish_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_padding"
            android:textStyle="bold"
            tools:text="Title"
            android:gravity="center"/>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            tools:visibility="visible"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/dish_price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_padding"
            tools:text="Price: 111"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dish_description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/item_padding"
            tools:text="The description"
            android:gravity="center"
            android:textSize="@dimen/description_full_size"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>

